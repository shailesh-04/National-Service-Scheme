<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> <!-- Axios CDN -->
</head>
<body class="flex items-center justify-center h-screen bg-gray-900 text-white">

    <div class="w-96 p-6 bg-gray-800 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-center mb-6">Login</h2>
        <form id="loginForm">
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium">Email</label>
                <input type="email" id="email" class="w-full p-2 mt-1 border rounded bg-gray-700 border-gray-600" required>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-sm font-medium">Password</label>
                <input type="password" id="password" class="w-full p-2 mt-1 border rounded bg-gray-700 border-gray-600" required>
            </div>
            <button type="submit" class="w-full p-2 bg-blue-500 hover:bg-blue-600 rounded text-white">Login</button>
        </form>
        <p id="message" class="mt-4 text-red-400 text-center"></p>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            try {
                const response = await axios.post('api/user/singin', { email, password });
                    localStorage.setItem('token', response.data.token);
                    document.getElementById('message').textContent = "Login successful!";
                    document.getElementById('message').classList.replace("text-red-400", "text-green-400");
                    alert("successfuly Login");
                    window.location.href="/users";
            } catch (error) {
                document.getElementById('message').textContent = error.response?.data?.message || "Error logging in!";
                alert(error.response.data);
            }
        });
    </script>

</body>
</html>
