<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD with Tailwind and Axios</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="p-10 bg-gray-100">
    <div class="w-screen-[-100px] my-auto bg-white p-5 rounded-lg shadow">
        <h2 class="text-xl font-bold mb-4">CRUD Operations</h2>

        <div class="mb-4">
            <input type="text" id="nameInput" placeholder="Enter name" class="w-full p-2 border rounded mb-2">
            <input type="email" id="emailInput" placeholder="Enter email" class="w-full p-2 border rounded mb-2">
            <input type="password" id="passwordInput" placeholder="Enter password"
                class="w-full p-2 border rounded mb-2">
            <input type="text" id="phoneInput" placeholder="Enter phone" class="w-full p-2 border rounded">
            <button onclick="addItem()" class="mt-2 w-full bg-blue-500 text-white p-2 rounded">Add Item</button>
        </div>

        <table class="w-screen-[-200px] my-auto border-collapse border border-gray-300 mt-4">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 p-2">ID</th>
                    <th class="border border-gray-300 p-2">Name</th>
                    <th class="border border-gray-300 p-2">Email</th>
                    <th class="border border-gray-300 p-2">Password</th>
                    <th class="border border-gray-300 p-2">Phone</th>
                    <th class="border border-gray-300 p-2">Profile</th>
                    <th class="border border-gray-300 p-2">Actions</th>
                </tr>
            </thead>
            <tbody id="itemsList"></tbody>
        </table>
    </div>

    <script>
        const apiUrl = "http://localhost:3000/api/user";

        async function fetchItems() {
            try {
                const res = await axios.get(apiUrl);
                renderItems(res.data);
            } catch (error) {
                console.error("Error fetching items:", error);
            }
        }

        async function addItem() {
            const name = document.getElementById("nameInput").value;
            const email = document.getElementById("emailInput").value;
            const password = document.getElementById("passwordInput").value;
            const phone = document.getElementById("phoneInput").value;

            const newItem = { name, email, password, phone };

            try {
                await axios.post(apiUrl, newItem);
                fetchItems();
            } catch (error) {
                console.error("Error adding item:", error);
            }
        }
        async function updateItemImage(id) {
            const fileInput = document.getElementById("image" + id);
            if (fileInput.files[0]) {
                try {
                    await axios.put(`${apiUrl}/image/${id}`, { image: fileInput.files[0]});
                    fetchItems();
                } catch (error) {
                    console.error("Error updating item:", error);
                }
            }
        }

        async function updateItem(id) {
            const name = document.getElementById("name" + id).value;
            const email = document.getElementById("email" + id).value;
            const password = document.getElementById("password" + id).value;
            const phone = document.getElementById("phone" + id).value;
            try {
                await axios.put(`${apiUrl}/${id}`, { name, email, password, phone });
                fetchItems();
            } catch (error) {
                console.error("Error updating item:", error);
            }
        }

        async function deleteItem(id) {
            try {
                await axios.delete(`${apiUrl}/${id}`);
                fetchItems();
            } catch (error) {
                console.error("Error deleting item:", error);
            }
        }

        function renderItems(items) {
            const list = document.getElementById("itemsList");
            list.innerHTML = "";
            items.forEach(item => {
                const tr = document.createElement("tr");
                tr.className = "border border-gray-300";
                tr.innerHTML = `
                    <td>${item.id}</td>
                    <td><input type="text" value="${item.name}" class="w-full p-1" id="name${item.id}"></td>
                    <td><input type="email" value="${item.email}" class="w-full p-1" id="email${item.id}"></td>
                    <td><input type="text" value="${item.password}" class="w-full p-1" id="password${item.id}"></td>
                    <td><input type="text" value="${item.phone}" class="w-full p-1" id="phone${item.id}"></td>
                    <td>
                        ${item.image ? `<img src="${item.image}" alt="Profile" class="w-16 h-16 rounded-full">` : "No Image"}
                        <input type="file" id="image${item.id}" class="mt-2 w-full border rounded p-1">
                        <button onclick="updateItemImage('${item.id}')" class="bg-yellow-500 px-2 py-1 rounded">Upload</button>
                    </td>
                    <td class="text-center">
                        <button onclick="updateItem('${item.id}')" class="bg-green-500 text-white px-2 py-1 rounded">Update</button>
                        <button onclick="deleteItem('${item.id}')" class="bg-red-500 text-white px-2 py-1 rounded">Delete</button>
                    </td>
                `;
                list.appendChild(tr);
            });
        }

        fetchItems();
    </script>
</body>

</html>