{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",   
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
