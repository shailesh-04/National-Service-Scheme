{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "#/*": ["./*"],
            "@/*": ["./src/*"],
            "@services/*": ["./src/services/*"],
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/components/*"],
            "@constants/*": ["./src/constants/*"],
            "@script/*": ["./src/script/*"],
            "@store/*": ["./src/store/*"],
            "@assets/*": ["./src/assets/*"],
            "@types/*": ["./src/types/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
